{
  "name": "nostr-reader",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "preview": "vite preview",
    "fmt": "prettier \"**/*.{svelte,ts,tsx,js,cjs,yml,md,html,css}\" --ignore-path .gitignore --write",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run svelte-check",
    "start": "vite preview",
    "build": "npm run typecheck && vite build"
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^4.5.10",
    "@sveltejs/adapter-auto": "^3.2.0",
    "@sveltejs/vite-plugin-svelte": "^3.1.0",
    "@tsconfig/svelte": "^5.0.0",
    "@types/eslint": "^9.0.0",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "autoprefixer": "^10.4.0",
    "emoji-datasource": "^15.0.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.45.0",
    "light-bolt11-decoder": "^3.0.0",
    "path": "^0.12.7",
    "postcss": "^8.4.33",
    "postcss-load-config": "^5.0.2",
    "prettier": "^3.3.0",
    "prettier-plugin-svelte": "^3.2.0",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "svelte-routing": "^2.10.0",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.8.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.2.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "linkify-html": "^4.1.3",
    "linkifyjs": "^4.1.3",
    "popper.js": "^1.16.1",
    "svelte-icons-pack": "^3.1.3",
    "svelte-modals": "^1.3.0"
  },
  "prettier": {
    "semi": false,
    "useTabs": true,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "pluginSearchDirs": [
      "."
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:svelte/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020,
      "extraFileExtensions": [
        ".svelte"
      ]
    },
    "env": {
      "browser": true,
      "es2017": true,
      "node": true
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "parser": "svelte-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ],
    "ignorePatterns": [
      "yarn.lock"
    ]
  }
}
